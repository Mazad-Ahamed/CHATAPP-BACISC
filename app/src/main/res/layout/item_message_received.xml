<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_receiver_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="50dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_receiver_bubble"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="start"
        android:elevation="2dp">

        <TextView
            android:id="@+id/sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvReceiverMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey! This is a receiver message."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReceiverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:46 PM"
            android:textSize="12sp"
            android:textColor="#80000000"
            android:gravity="end"
            android:layout_gravity="end" />
    </LinearLayout>

</LinearLayout>
